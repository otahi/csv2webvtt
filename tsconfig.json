{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "declarationDir": "dist/types",
    "declaration": true,
    "target": "es2022",
    "module": "es2022",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/__test__",
  ]
}
